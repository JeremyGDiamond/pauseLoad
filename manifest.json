{
  "manifest_version": 2,
  "name": "pauseLoad",
  "version": "1.0",
  "permissions": [
    "webNavigation",
    "storage",
    "scripting",
    "tabs",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["pauseLoad.js"]
  },

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "256": "icons/plIcon.png"
    }
  },

  "icons": {
    "256": "icons/plIcon.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "pauseLoad@hgithub.com.JeremyGDiamond"
    }
  }
}